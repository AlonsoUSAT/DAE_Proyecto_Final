	<queryString>
		<![CDATA[SELECT
    mp.nombre AS metodo_pago,
    COUNT(c.idComprobante) AS cantidad_operaciones,
    SUM(c.total) AS monto_total
FROM COMPROBANTE_VENTA c
JOIN MEDIO_PAGO mp ON c.idMedioPago = mp.idMedioPago
JOIN VENTA v ON c.idVenta = v.idVenta
WHERE v.fecha BETWEEN $P{fecha_inicio} AND $P{fecha_fin}
AND c.estado = true
GROUP BY mp.idMedioPago, mp.nombre
ORDER BY monto_total DESC;]]>
	</queryString>
	<field name="metodo_pago" class="java.lang.String"/>
	<field name="cantidad_operaciones" class="java.lang.Long"/>
	<field name="monto_total" class="java.math.BigDecimal"/>

	<parameter name="fecha_fin" class="java.util.Date">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
    v.fecha,
    COUNT(c.idComprobante) AS cantidad_ventas,
    SUM(c.subtotal) AS subtotal_dia,
    SUM(c.igv) AS impuestos_dia,
    SUM(c.total) AS total_vendido_dia
FROM COMPROBANTE_VENTA c
JOIN VENTA v ON c.idVenta = v.idVenta
WHERE v.fecha BETWEEN $P{fecha_inicio} AND $P{fecha_fin}
AND c.estado = true
GROUP BY v.fecha
ORDER BY v.fecha ASC;]]>
	</queryString>

	<parameter name="fecha_fin" class="java.util.Date">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
    TO_CHAR(v.fecha, 'MM') AS numero_mes,
    TO_CHAR(v.fecha, 'TMMonth') AS nombre_mes,
    COUNT(c.idComprobante) AS cantidad_ventas,
    SUM(c.total) AS total_mensual
FROM COMPROBANTE_VENTA c
JOIN VENTA v ON c.idVenta = v.idVenta
WHERE EXTRACT(YEAR FROM v.fecha) = $P{anio}
AND c.estado = true
GROUP BY TO_CHAR(v.fecha, 'MM'), TO_CHAR(v.fecha, 'TMMonth')
ORDER BY numero_mes ASC;]]>
	</queryString>

	<parameter name="fecha_fin" class="java.util.Date">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
    p.nombre AS nombre_producto,
    m.nombre AS marca,
    cat.nombreCategoria,
    SUM(d.cantidad) AS total_unidades,
    SUM(d.cantidad * d.precio) AS ingreso_generado
FROM DETALLE_VENTA d
JOIN VENTA v ON d.idVenta = v.idVenta
JOIN PRODUCTO p ON d.idProducto = p.idProducto
JOIN MARCA m ON p.idMarca = m.idMarca
JOIN CATEGORIA cat ON p.idCategoria = cat.idCategoria
WHERE v.fecha BETWEEN $P{fecha_inicio} AND $P{fecha_fin}
AND v.estado = true
GROUP BY p.idProducto, p.nombre, m.nombre, cat.nombreCategoria
ORDER BY total_unidades DESC
LIMIT 10;]]>
	</queryString>

	<parameter name="RANGO_DIAS" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[90]]></defaultValueExpression>
	</parameter>
	<parameter name="P_PRODUCTO_ID" class="java.lang.String">
		<defaultValueExpression><![CDATA["TODOS"]]></defaultValueExpression>
	</parameter>
	<parameter name="fechaInicio" class="java.util.Date"/>
	<parameter name="fechaFin" class="java.util.Date"/>
	<queryString>
		<![CDATA[SELECT
    l.nrolote AS LoteNum,
    p.nombre AS Producto,
    pr.cantidad || ' ' || u.nombreunidad || ' ' || tp.nombretipopresentacion AS PresCompleta,
    l.stockactual AS StockLote,
    l.fechavencimiento AS FechaVenc
FROM
    public.lote l
    JOIN public.producto p ON l.idproducto = p.idproducto
    JOIN public.presentacion pr ON l.idpresentacion = pr.idpresentacion
    JOIN public.tipo_presentacion tp ON pr.tipopresentacion = tp.idtipopresentacion
    JOIN public.unidad u ON pr.idunidad = u.idunidad
WHERE
    l.estado = TRUE
    -- 1. FILTRO DE FECHAS (OJO: Asegúrate de poner suficientes días en el parámetro)
    AND l.fechavencimiento BETWEEN CURRENT_DATE AND (CURRENT_DATE + ($P{RANGO_DIAS} || ' days')::INTERVAL)
    -- 2. FILTRO POR ID (Mucho más seguro que por nombre)
    AND (
        $P{P_PRODUCTO_ID} IS NULL
        OR $P{P_PRODUCTO_ID}::text = 'TODOS'
        OR p.idproducto::text = $P{P_PRODUCTO_ID}::text
    )
ORDER BY
    l.fechavencimiento ASC;]]>
	</queryString>

	<parameter name="p_id_producto" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[0]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
     prod.nombre AS "Producto",
     -- Concatenación completa
     CONCAT(tp.nombretipopresentacion, ' x ', pres.cantidad, ' ', uni.nombreunidad) AS "Presentacion Completa",
     pp.precio AS "Precio",
     pp.stock AS "Stock",
     mar.nombre AS "Marca",
     -- ESTA ES LA LÍNEA NUEVA:
     SUM(pp.stock) OVER(PARTITION BY prod.idproducto) AS "Total Stock"
FROM
     public.presentacion_producto pp
     INNER JOIN public.producto prod ON pp.idproducto = prod.idproducto
     INNER JOIN public.marca mar ON prod.idmarca = mar.idmarca
     INNER JOIN public.presentacion pres ON pp.idpresentacion = pres.idpresentacion
     INNER JOIN public.tipo_presentacion tp ON pres.tipopresentacion = tp.idtipopresentacion
     INNER JOIN public.unidad uni ON pres.idunidad = uni.idunidad
WHERE
     prod.idproducto = $P{p_id_producto}]]>
	</queryString>

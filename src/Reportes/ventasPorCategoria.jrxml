	<parameter name="fechaInicio" class="java.util.Date"/>
	<parameter name="fechaFin" class="java.util.Date"/>
	<queryString>
		<![CDATA[SELECT
    c.nombrecategoria AS "Categoria",  -- <--- CAMBIO AQUÍ (Sin tilde)
    COUNT(DISTINCT v.idventa) AS "Nro. Transacciones",
    SUM(dv.cantidad) AS "Items Vendidos",
    SUM(dv.cantidad * dv.precio) AS "Total Ingresos"
FROM
    public.detalle_venta dv
INNER JOIN public.venta v ON dv.idventa = v.idventa
INNER JOIN public.producto p ON dv.idproducto = p.idproducto
INNER JOIN public.categoria c ON p.idcategoria = c.idcategoria
WHERE
    v.estado = true
    AND v.fecha >= $P{fechaInicio}
    AND v.fecha <= $P{fechaFin}
GROUP BY
    c.idcategoria, c.nombrecategoria
ORDER BY
    "Total Ingresos" DESC;]]>
	</queryString>

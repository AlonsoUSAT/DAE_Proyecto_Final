	<parameter name="fechaInicio" class="java.util.Date"/>
	<parameter name="fechaFin" class="java.util.Date"/>
	<queryString>
		<![CDATA[SELECT
    p.nombre AS "Producto",
    tp.nombretipopresentacion AS "Tipo Presentacion",
    pres.cantidad AS "Cant. x Envase",
    u.nombreunidad AS "Unidad Medida",
    SUM(dv.cantidad) AS "Unidades Vendidas",
    SUM(dv.cantidad * dv.precio) AS "Total Ingresos"
FROM
    public.detalle_venta dv
INNER JOIN public.venta v ON dv.idventa = v.idventa
INNER JOIN public.producto p ON dv.idproducto = p.idproducto
INNER JOIN public.presentacion pres ON dv.idpresentacion = pres.idpresentacion
INNER JOIN public.tipo_presentacion tp ON pres.tipopresentacion = tp.idtipopresentacion
INNER JOIN public.unidad u ON pres.idunidad = u.idunidad
WHERE
    v.estado = true
    -- OJO AQUÍ: Sintaxis de iReport
    AND v.fecha >= $P{fechaInicio}
    AND v.fecha <= $P{fechaFin}
GROUP BY
    p.idproducto, p.nombre, tp.nombretipopresentacion, pres.cantidad, u.nombreunidad
ORDER BY
    "Total Ingresos" DESC;]]>
	</queryString>

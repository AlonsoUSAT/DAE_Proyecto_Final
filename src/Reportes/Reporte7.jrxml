	<parameter name="fecha_inicio" class="java.util.Date"/>
	<parameter name="fecha_fin" class="java.util.Date"/>
	<queryString>
		<![CDATA[SELECT
    mp.nombre AS "Metodo Pago",
    -- AQUÍ ESTÁ EL CAMBIO: Usamos los nombres que tu reporte ya tiene
    COUNT(DISTINCT pv.idventa) AS cantidad_operaciones,
    SUM(pv.monto) AS monto_total
FROM
    public.pago_venta pv
INNER JOIN public.venta v ON pv.idventa = v.idventa
INNER JOIN public.medio_pago mp ON pv.idmediopago = mp.idmediopago
WHERE
    v.estado = true
    AND v.fecha >= $P{fecha_inicio}
    AND v.fecha <= $P{fecha_fin}
GROUP BY
    mp.idmediopago, mp.nombre
ORDER BY
    monto_total DESC;]]>
	</queryString>
	<field name="Metodo Pago" class="java.lang.String"/>
	<field name="cantidad_operaciones" class="java.lang.Long"/>
	<field name="monto_total" class="java.math.BigDecimal"/>
